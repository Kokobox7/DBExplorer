<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="400.0" prefWidth="580.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1">
    <HBox alignment="CENTER" spacing="26.0" VBox.vgrow="ALWAYS">
        <VBox alignment="CENTER" prefHeight="480.0" prefWidth="240.0" spacing="20.0">
            <HBox.margin>
                <Insets top="30.0" />
            </HBox.margin>
            <Label fx:id="subTitle" alignment="CENTER" text="Sign in as an administrator:">
                <font>
                    <Font size="18.0" />
                </font>
            </Label>
            <VBox>
                <Label text="Login">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <TextField fx:id="textFieldLogin" prefHeight="25.0" prefWidth="220.0">
                    <VBox.margin>
                        <Insets bottom="20.0" />
                    </VBox.margin>
                </TextField>
                <Label text="Password">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <PasswordField fx:id="passwordFieldPassword" />
            </VBox>
            <Button fx:id="buttonAdmin" defaultButton="true" onAction="#buttonAdminClicked" text="Sign in">
                <font>
                    <Font size="18.0" />
                </font>
            </Button>
            <Label fx:id="labelConnectionState" textFill="RED" />
        </VBox>
        <Label fx:id="mainTitle" text="OR">
            <font>
                <Font size="18.0" />
            </font>
        </Label>
        <Button fx:id="buttonGuest" onAction="#buttonGuestClicked" text="Log in as a guest">
            <font>
                <Font size="18.0" />
            </font>
        </Button>
    </HBox>
</VBox>
